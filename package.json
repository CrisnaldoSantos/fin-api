{
  "name": "fin-api",
  "version": "1.0.0",
  "description": "Financial API built with Node.js, TypeScript and Fastify",
  "main": "dist/index.js",
  "type": "commonjs",
  "engines": {
    "node": ">=22.12.0"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "preview": "npm run build && npm start",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "lint:check": "eslint src/**/*.ts --max-warnings 0",
    "test": "echo \"Error: no test specified\" && exit 1",
    "knex:migrate:make": "tsx node_modules/.bin/knex migrate:make --knexfile knexfile.ts",
    "knex:migrate:latest": "tsx node_modules/.bin/knex migrate:latest --knexfile knexfile.ts",
    "knex:migrate:up": "tsx node_modules/.bin/knex migrate:up --knexfile knexfile.ts",
    "knex:migrate:down": "tsx node_modules/.bin/knex migrate:down --knexfile knexfile.ts",
    "knex:migrate:rollback": "tsx node_modules/.bin/knex migrate:rollback --knexfile knexfile.ts",
    "knex:migrate:status": "tsx node_modules/.bin/knex migrate:status --knexfile knexfile.ts",
    "knex:seed:make": "tsx node_modules/.bin/knex seed:make --knexfile knexfile.ts",
    "knex:seed:run": "tsx node_modules/.bin/knex seed:run --knexfile knexfile.ts",
    "db:reset": "rm -f tmp/database.db && npm run knex:migrate:latest && npm run knex:seed:run"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "fastify",
    "api",
    "financial"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/node": "^24.1.0",
    "dotenv": "^17.2.1",
    "fastify": "^5.4.0",
    "knex": "^3.1.0",
    "nodemon": "^3.1.10",
    "sqlite3": "^5.1.7",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "zod": "^4.0.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0"
  }
}
